@model List<AI_Kesim.Models.Calisan>

<h2>Çalışan Yönetimi</h2>

<a class="btn btn-primary" asp-action="CreateCalisan">Yeni Çalışan Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Uzmanlık Alanı</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Isim</td>
                <td>@calisan.Soyisim</td>
                <td>@calisan.UzmanlikAlani</td>
                <td>
                    @foreach (var saat in calisan.CalismaSaatleri)
                    {
                        <span>@saat.SaatAraligi</span>

                        <br />
                    }
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="DeleteCalisan" asp-route-id="@calisan.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
