@model IEnumerable<AI_Kesim.Models.Calisan>
@{
    ViewData["Title"] = "Index";
    var seciliTarih = (DateTime)ViewData["SeciliTarih"];
    var randevular = (List<AI_Kesim.Models.Randevu>)ViewData["Randevular"];
}

<h1>Çalışanlar ve Randevu Saatleri</h1>

<div>
    <form method="get" asp-action="Index">
        <button type="submit" name="tarih" value="@seciliTarih.AddDays(-1)">← Geri</button>
        <span>@seciliTarih.ToString("dd MMMM yyyy")</span>
        <button type="submit" name="tarih" value="@seciliTarih.AddDays(1)">İleri →</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Uzmanlık Alanları</th>
            <th>Maaş</th>
            <th>Randevu Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var calisan in Model)
        {
            <tr>
                <td>@calisan.Isim</td>
                <td>@calisan.Soyisim</td>
                <td>
                    <ul>
                        @foreach (var uzmanlik in calisan.CalisanUzmanliklari)
                        {
                            <li>@uzmanlik.Uzmanlik.Ad</li>
                        }
                    </ul>
                </td>
                <td>@calisan.Maas.ToString()</td>
                <td>
                    <ul>
                        @foreach (var randevu in randevular.Where(r => r.CalisanId == calisan.Id))
                        {
                            <li>@randevu.RandevuTarihi.ToString("HH:mm")</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@calisan.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@calisan.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@calisan.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form action="@Url.Action("Index", "Uzmanliks")" method="get">
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Uzmanlık Alanlarını Görüntüle
        </button>
    </div>
</form>
