@model Randevu

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div class="form-group mb-3">
                            <label>Hizmet Seçimi</label>
                            <select asp-for="UzmanlikId" id="UzmanlikId" class="form-control"
                                    asp-items="@(new SelectList(ViewBag.Uzmanliklar, "Id", "Ad"))" required>
                                <option value="">Hizmet Seçiniz</option>
                            </select>
                        </div>

                        <div class="form-group mb-3" id="calisanDiv" style="display:none">
                            <label>Çalışan Seçimi</label>
                            <select asp-for="CalisanId" id="CalisanId" class="form-control" required>
                                <option value="">Çalışan Seçiniz</option>
                            </select>
                        </div>

                        <div class="form-group mb-3" id="tarihDiv" style="display:none">
                            <label>Tarih Seçimi</label>
                            <input type="date" id="tarihSelect" class="form-control"
                                   min="@DateTime.Now.ToString("yyyy-MM-dd")" required />

                            <label class="mt-3">Saat Seçimi</label>
                            <select asp-for="RandevuTarihi" id="RandevuTarihi" class="form-control" required>
                                <option value="">Saat Seçiniz</option>
                            </select>
                        </div>

                        <button type="submit" class="btn btn-primary" id="submitBtn" style="display:none">
                            Randevu Oluştur
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Hizmet seçimi değiştiğinde çalışanları getir
        $("#UzmanlikId").change(function () {
            var uzmanlikId = $(this).val();
            if (uzmanlikId) {
                 console.log(uzmanlikId);
                $.get("/Randevu/GetCalisanlar/" + uzmanlikId, function (data) {
                    var select = $("#CalisanId");
                    select.empty();
                    select.append('<option value="">Çalışan Seçiniz</option>');
                    // Gelen veri doğru şekilde işleniyor
                    if (data.$values && data.$values.length > 0) {
                        $.each(data.$values, function (index, item) {
                            select.append(`<option value="${item.id}">${item.isim} ${item.soyisim}</option>`);
                        });
                    } else {
                        alert("Çalışan bulunamadı.");
                    }
                    $("#calisanDiv").show();
                }).fail(function () {
                    alert("Çalışanları getirirken bir hata oluştu.");
                });
            } else {
                $("#calisanDiv").hide();
                $("#tarihDiv").hide();
                $("#submitBtn").hide();
            }
        });
        

            // Çalışan seçimi değiştiğinde tarih seçimini göster
            $("#CalisanId").change(function() {
                if ($(this).val()) {
                    $("#tarihDiv").show();
                } else {
                    $("#tarihDiv").hide();
                    $("#submitBtn").hide();
                }
            });

            // Tarih seçildiğinde uygun saatleri getir
            $("#tarihSelect").change(function() {
                var tarih = $(this).val();
                var calisanId = $("#CalisanId").val();

                if (tarih && calisanId) {
                    $.get("/Randevu/GetAvailableTimes", { calisanId: calisanId, tarih: tarih }, function(data) {
                        var select = $("#RandevuTarihi");
                        select.empty();
                        select.append('<option value="">Saat Seçiniz</option>');
                        $.each(data, function(index, item) {
                            select.append(`<option value="${tarih}T${item.time}">${item.time}</option>`);
                        });
                        $("#submitBtn").show();
                    }).fail(function() {
                        alert("Saatleri getirirken bir hata oluştu.");
                    });
                } else {
                    $("#submitBtn").hide();
                }
            });
        });
    </script>
}
