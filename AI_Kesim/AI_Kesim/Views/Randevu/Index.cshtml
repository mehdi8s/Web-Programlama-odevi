@model RandevuModel

<div>
    <h1>Randevu Al</h1>

    <form asp-action="Kaydet" method="post">
        <ol>
            <li>
                <h4>Hizmet Seçimi</h4>
                <p>@Model.Hizmet</p>
                <button type="button">Ekle/Çıkar</button>
            </li>
            <li>
                <h4>Personel Seçimi</h4>
                <p>@Model.Personel</p>
                <button type="button">Değiştir</button>
            </li>
            <li>
                <h4>Tarih Seçimi</h4>
                <p>@Model.Tarih.ToString("dd/MM/yyyy")</p>
                <button type="button">Değiştir</button>
            </li>
            <li>
                <h4>Saat Seçimi</h4>
                <p>@Model.Saat.ToString(@"hh\:mm")</p>
                <button type="button">Değiştir</button>
            </li>
            <li>
                <h4>Kişisel Bilgiler</h4>
                <label for="Telefon">Cep Telefonu Numaranız</label>
                <input type="text" id="Telefon" name="Telefon" value="@Model.Telefon" class="form-control" />
            </li>
        </ol>

        <button type="submit" class="btn btn-success">Gönder</button>
        <button type="button" class="btn btn-danger">İptal</button>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-success">@ViewBag.Message</div>
    }
</div>
