@model IEnumerable<AI_Kesim.Models.Calisan>
@{
    ViewData["Title"] = "Index";
    var seciliTarih = (DateTime)ViewData["SeciliTarih"];
}

<h1>Çalışanlar ve Randevu Saatleri</h1>

<p>
    <a asp-action="Create">Yeni Çalışan Ekle</a>
</p>

<div>
    <form method="get" asp-action="Index">
        <button type="submit" name="tarih" value="@seciliTarih.AddDays(-1)">← Geri</button>
        <span>@seciliTarih.ToString("dd MMMM yyyy")</span>
        <button type="submit" name="tarih" value="@seciliTarih.AddDays(1)">İleri →</button>
    </form>
</div>

<table class="table">
    <thead>
        <tr>
            <th>İsim</th>
            <th>Soyisim</th>
            <th>Uzmanlık Alanları</th>
            <th>Maaş</th>
            <th>Randevu Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Isim</td>
                <td>@item.Soyisim</td>
                <td>
                    <ul>
                        @foreach (var uzmanlik in item.CalisanUzmanliklari)
                        {
                            <li>@uzmanlik.Uzmanlik.Ad</li>
                        }
                    </ul>
                </td>
                <td>@item.Maas</td>
                <td>
                    <ul>
                        @foreach (var saat in item.CalismaSaatleri.Where(cs => cs.Tarih.Date == seciliTarih.Date))
                        {
                            <li>@saat.Tarih.ToString("HH:mm") - Dolu</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form action="@Url.Action("Index", "Uzmanliks")" method="get">
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Uzmanlık Alanlarını Görüntüle
        </button>
    </div>
</form>
