@model AI_Kesim.Models.Calisan
@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Çalışan Detayları</h1>

<div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
        <h4 class="card-title text-center">Çalışan Bilgileri</h4>
        <hr />
        <dl class="row">
            <!-- İsim -->
            <dt class="col-sm-4 text-end fw-bold">İsim:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Isim)</dd>

            <!-- Soyisim -->
            <dt class="col-sm-4 text-end fw-bold">Soyisim:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Soyisim)</dd>

            <!-- Uzmanlık Alanları -->
            <dt class="col-sm-4 text-end fw-bold">Uzmanlık Alanları:</dt>
            <dd class="col-sm-8">
                @if (Model.CalisanUzmanliklari != null && Model.CalisanUzmanliklari.Any())
                {
                    <div>
                        @foreach (var cu in Model.CalisanUzmanliklari)
                        {
                            <span class="badge bg-primary me-2">@cu.Uzmanlik.Ad</span>
                        }
                    </div>
                }
                else
                {
                    <span>Uzmanlık alanı bulunmamaktadır.</span>
                }
            </dd>

            <!-- Maaş -->
            <dt class="col-sm-4 text-end fw-bold">Maaş:</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Maas)</dd>
        </dl>
    </div>

    <div class="card-footer text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-sm me-2">
            <i class="bi bi-pencil"></i> Düzenle
        </a>
        <a asp-action="Index" class="btn btn-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Listeye Geri Dön
        </a>
    </div>
</div>

<style>
    body {
        font-size: 1.25rem; /* Genel yazı büyüklüğünü artır */
    }

    .table th, .table td {
        padding: 1rem; /* Tablo hücrelerini genişlet */
    }

    .btn {
        font-size: 1rem; /* Buton yazılarını büyüt */
    }

    .d-flex.justify-content-between {
        margin-bottom: 1.5rem; /* Buton ile tablo arasına boşluk ekle */
    }
</style>