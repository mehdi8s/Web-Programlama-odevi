@model AI_Kesim.Models.Uzmanlik

@{
    ViewData["Title"] = "Detaylar";
}

<h1 class="display-4 text-center my-4">Uzmanlık Detayları</h1>

<div class="container">
    <div class="card shadow-sm p-4">
        <h4 class="text-center mb-4">Bilgiler</h4>
        <dl class="row">
            <!-- Uzmanlık Adı -->
            <dt class="col-sm-4 text-primary">Uzmanlık Adı:</dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Ad)
            </dd>

            <!-- Ücret -->
            <dt class="col-sm-4 text-primary">Ücret:</dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Ucret) TL
            </dd>
        </dl>
    </div>

    <!-- Butonlar -->
    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg mx-2">Düzenle</a>
        <a asp-action="Index" class="btn btn-outline-primary btn-lg mx-2">Listeye Geri Dön</a>
    </div>
</div>

<style>
    body {
        font-size: 1.25rem;
    }

    .container {
        max-width: 600px;
        margin-top: 2rem;
    }

    .card {
        border-radius: 10px;
        background-color: #f9f9f9;
        border: 1px solid #ddd;
    }

    dt {
        font-weight: bold;
    }

    .btn-lg {
        font-size: 1.2rem;
        padding: 0.5rem 1.5rem;
    }

    .text-primary {
        font-size: 1.1rem;
        font-weight: 500;
    }
</style>
