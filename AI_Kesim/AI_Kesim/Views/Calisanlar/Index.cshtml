@model IEnumerable<AI_Kesim.Models.Calisan>

@{
    ViewData["Title"] = "Index";
    var saatDilimleri = new List<string> { "12:00", "13:00", "14:00", "15:00", "16:00", "17:00", "18:00" };
}

<h1>Çalışanlar ve Çalışma Saatleri</h1>

<p>
    <a asp-action="Create">Yeni Çalışan Ekle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>İsim</th>
            <th>@Html.DisplayNameFor(model => model.First().Soyisim)</th>
            <th>Uzmanlık Alanları</th>
            <th>Maaş</th>
            <th>Çalışma Saatleri</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Isim</td>
                <td>@item.Soyisim</td>
                <td>
                    <ul>
                        @foreach (var uzmanlik in item.CalisanUzmanliklari)
                        {
                            <li>@uzmanlik.Uzmanlik.Ad</li>
                        }
                    </ul>
                </td>
                <td>@item.Maas</td>
                <td>
                    <ul>
                        @foreach (var saat in saatDilimleri)
                        {
                            var durum = item.CalismaSaatleri.Any(cs => cs.SaatAraligi == saat) ? "Dolu" : "Boş";
                            <li>@saat - @durum</li>
                        }
                    </ul>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<form action="@Url.Action("Index", "Uzmanliks")" method="get">
    <div class="form-group">
        <button type="submit" class="btn btn-primary">
            Uzmanlık Alanlarını Görüntüle
        </button>
    </div>
</form>
