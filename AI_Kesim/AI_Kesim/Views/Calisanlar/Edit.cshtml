@model AI_Kesim.Models.Calisan
@{
    ViewData["Title"] = "Edit";
    var secilenUzmanliklar = (List<int>)ViewData["SecilenUzmanliklar"] ?? new List<int>();
}

<h1>Düzenle</h1>
<h4>Çalışan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Isim" class="control-label">İsim</label>
                <input asp-for="Isim" class="form-control" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyisim" class="control-label">Soyisim</label>
                <input asp-for="Soyisim" class="form-control" />
                <span asp-validation-for="Soyisim" class="text-danger"></span>
            </div>
            <!-- Uzmanlık Alanları -->
            <div class="form-group">
                <label class="control-label">Uzmanlık Alanları</label>
                <div>
                    @foreach (var uzmanlik in (IEnumerable<dynamic>)ViewData["Uzmanliklar"])
                    {
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="UzmanlikIds"
                                   value="@uzmanlik.Id"
                                   id="uzmanlik_@uzmanlik.Id"
                            @(secilenUzmanliklar.Contains(uzmanlik.Id) ? "checked" : "") />
                            <label class="form-check-label" for="uzmanlik_@uzmanlik.Id">
                                @uzmanlik.Ad
                            </label>
                        </div>
                    }
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Maas" class="control-label">Maaş</label>
                <input asp-for="Maas" class="form-control" />
                <span asp-validation-for="Maas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}