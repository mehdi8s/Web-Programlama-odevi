@model AI_Kesim.Models.Calisan

@{
    ViewData["Title"] = "Create";
}

<h1>Oluştur</h1>

<h4>Çalışan</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Isim" class="control-label">İsim</label>
                <input asp-for="Isim" class="form-control" />
                <span asp-validation-for="Isim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Soyisim" class="control-label">Soyisim</label>
                <input asp-for="Soyisim" class="form-control" />
                <span asp-validation-for="Soyisim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UzmanlikAlani" class="control-label">Uzmanlık Alanı</label>
                <input asp-for="UzmanlikAlani" class="form-control" />
                <span asp-validation-for="UzmanlikAlani" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Maas" class="control-label">Maaş</label>
                <input asp-for="Maas" class="form-control" />
                <span asp-validation-for="Maas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
