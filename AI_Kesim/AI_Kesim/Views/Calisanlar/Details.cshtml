<!-- Details.cshtml -->
@model AI_Kesim.Models.Calisan
@{
    ViewData["Title"] = "Details";
}
<h1>Detaylar</h1>
<div>
    <h4>Çalışan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            İsim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Isim)
        </dd>
        <dt class="col-sm-2">
            Soyisim
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyisim)
        </dd>
        <dt class="col-sm-2">
            Uzmanlık Alanları
        </dt>
        <dd class="col-sm-10">
            @if (Model.CalisanUzmanliklari != null && Model.CalisanUzmanliklari.Any())
            {
                <div>
                    @foreach (var cu in Model.CalisanUzmanliklari)
                    {
                        <span class="badge bg-primary me-2">@cu.Uzmanlik.Ad</span>
                    }
                </div>
            }
            else
            {
                <span>Uzmanlık alanı bulunmamaktadır.</span>
            }
        </dd>
        <dt class="col-sm-2">
            Maaş
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Maas)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Düzenle</a> |
    <a asp-action="Index">Listeye Geri Dön</a>
</div>
